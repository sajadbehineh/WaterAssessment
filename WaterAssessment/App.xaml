<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="WaterAssessment.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:WaterAssessment.Converters"
    xmlns:helpers="using:WaterAssessment.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///WinUICommunity.Components/Themes/Generic.xaml" />
                <!--<ResourceDictionary Source="Helpers/CustomControls/CustomNumberBoxStyle.xaml" />-->
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <x:Double x:Key="ContentDialogMaxWidth">800</x:Double>
            <x:Double x:Key="ContentDialogMaxHeight">756</x:Double>
            <FontFamily x:Key="ContentControlThemeFontFamily"><![CDATA[Assets/Fonts/Samim.ttf#Samim]]></FontFamily>
            <FontFamily x:Key="SamimBold"><![CDATA[Assets/Fonts/Samim-Bold.ttf#Samim]]></FontFamily>
            <FontFamily x:Key="SamimMedium"><![CDATA[Assets/Fonts/Samim-Medium.ttf#Samim Medium]]></FontFamily>
            <FontFamily x:Key="SamimRegular"><![CDATA[Assets/Fonts/Samim.ttf#Samim]]></FontFamily>
            <FontFamily x:Key="SamimFD"><![CDATA[Assets/Fonts/Samim-FD.ttf#Samim FD]]></FontFamily>

            <!--<FontFamily x:Key="VazirmatnBold">Assets/Fonts/Vazirmatn-Bold.ttf#Vazirmatn</FontFamily>
            <FontFamily x:Key="VazirmatnMedium">Assets/Fonts/Vazirmatn-Medium.ttf#Vazirmatn Medium</FontFamily>
            <FontFamily x:Key="VazirmatnRegular">Assets/Fonts/Vazirmatn-Regular.ttf#Vazirmatn</FontFamily>-->
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBoolConverter" />
            <converters:DateTimeToShamsiConverter x:Key="DateToShamsiConv" />
            <converters:DateTimeToDateTimeOffsetConverter x:Key="DateToOffsetConv" />
            <converters:DoubleToStringConverter x:Key="DoubleToStringConv" />
            <helpers:FlexibleDoubleFormatter x:Key="FlexibleFormatter" />

            <helpers:DoubleFormatter x:Key="Df" />
            <helpers:DoubleFormatterF1 x:Key="Df1" />
            <Style
                x:Key="HorizontalSwipe"
                BasedOn="{StaticResource ListViewItemRevealStyle}"
                TargetType="ListViewItem">
                <Setter Property="Height" Value="60" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="VerticalContentAlignment" Value="Stretch" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>

            <Style TargetType="MenuFlyoutItem">
                <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
            </Style>

            <Style TargetType="TabViewItem">
                <Setter Property="MinHeight" Value="37" />
            </Style>

            <!--  Other app resources here  -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
