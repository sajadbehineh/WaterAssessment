<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WaterAssessment.Controls.PaginationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WaterAssessment.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,10"
        Orientation="Horizontal"
        Spacing="10">
        <Button
            Click="FirstPage_Click"
            Content="&lt;&lt;"
            IsEnabled="{x:Bind CanGoPrevious, Mode=OneWay}" />
        <Button
            Click="PreviousPage_Click"
            Content="&lt;"
            IsEnabled="{x:Bind CanGoPrevious, Mode=OneWay}" />
        <TextBlock VerticalAlignment="Center">
            <Run Text="صفحه" />
            <Run Text="{x:Bind CurrentPage, Mode=OneWay}" />
            <Run Text="از" />
            <Run Text="{x:Bind TotalPages, Mode=OneWay}" />
        </TextBlock>
        <Button
            Click="NextPage_Click"
            Content="&gt;"
            IsEnabled="{x:Bind CanGoNext, Mode=OneWay}" />
        <Button
            Click="LastPage_Click"
            Content="&gt;&gt;"
            IsEnabled="{x:Bind CanGoNext, Mode=OneWay}" />
    </StackPanel>
</UserControl>
