<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WaterAssessment.Views.AssessmentFormPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:akTools="using:AK.Toolkit.WinUI3"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:WaterAssessment.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:WaterAssessment.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:WaterAssessment.Models"
    xmlns:viewmodels="using:WaterAssessment.ViewModel"
    xmlns:wct="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:wuc="using:WinUICommunity"
    x:Name="MyPage"
    DataContext="{x:Bind ViewModel}"
    FlowDirection="RightToLeft"
    FontFamily="{StaticResource ContentControlThemeFontFamily}"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="akTools:NumberBoxEx">
            <Setter Property="IsDeleteButtonVisible" Value="False" />
            <Setter Property="NumberHorizontalAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="SpinButtonPlacementMode" Value="Hidden" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="InputsPanel"
            Grid.Row="0"
            Width="1054.5"
            Margin="0,10,0,0"
            HorizontalAlignment="Stretch"
            BorderBrush="Black"
            BorderThickness="1.5 1.5 1. 0 "
            CornerRadius="4 4 0 0"
            Style="{ThemeResource GridPanel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="55" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="38" />
                <RowDefinition Height="38" />
                <RowDefinition Height="38" />
            </Grid.RowDefinitions>

            <!--  Row 2  -->
            <Border
                Grid.Row="1"
                Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="0,1.5,0,1.5">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="تاریخ اندازه گیری" />
            </Border>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1.5,1.5,0,1.5">
                <CalendarDatePicker
                    HorizontalAlignment="Stretch"
                    CalendarIdentifier="PersianCalendar"
                    Date="{x:Bind ViewModel.Date, Mode=TwoWay, Converter={StaticResource DateToOffsetConv}}"
                    DateFormat="{}{year.full}/{month.integer}/{day.integer}"
                    Language="fa-IR" />
            </Border>

            <!--  Row 1  -->
            <Border
                Grid.Row="0"
                Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="محل اندازه گیری" />
            </Border>
            <Border
                Grid.Row="0"
                Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <ComboBox
                    HorizontalAlignment="Stretch"
                    DisplayMemberPath="LocationName"
                    ItemsSource="{x:Bind ViewModel.AllLocations}"
                    MaxDropDownHeight="300"
                    PlaceholderText="انتخاب کنید..."
                    SelectedItem="{x:Bind ViewModel.SelectedLocation, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="0,0,0,0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="پروانه" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <ComboBox
                    HorizontalAlignment="Stretch"
                    DisplayMemberPath="PropellerName"
                    ItemsSource="{x:Bind ViewModel.AllPropellers}"
                    MaxDropDownHeight="300"
                    PlaceholderText="انتخاب کنید..."
                    SelectedItem="{x:Bind ViewModel.SelectedPropeller, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="4"
                BorderBrush="Black"
                BorderThickness="1.5,1.5,0,0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="اشل" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="5"
                BorderBrush="Black"
                BorderThickness="1.5,1.5,0,0">
                <akTools:NumberBoxEx
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    NumberFormatter="{StaticResource Df}"
                    PlaceholderText="مثلا 116.20"
                    Value="{x:Bind ViewModel.Echelon, Mode=TwoWay, Converter={StaticResource NullDoubleConv}}" />
            </Border>
            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="4"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="اندازه گیرها" />
            </Border>
            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="5"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <StackPanel
                    Margin="5"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
                    <StackPanel Width="230" Orientation="Horizontal">
                        <ComboBox
                            Width="190"
                            HorizontalAlignment="Left"
                            DisplayMemberPath="LastName"
                            ItemsSource="{x:Bind ViewModel.AllEmployees}"
                            MaxDropDownHeight="300"
                            SelectedItem="{x:Bind ViewModel.SelectedEmployeeToAdd, Mode=TwoWay}" />
                        <Button
                            Height="33"
                            Margin="4,0,0,5"
                            HorizontalAlignment="Right"
                            Command="{x:Bind ViewModel.AddEmployeeCommand}"
                            Content="+" />
                    </StackPanel>

                    <ItemsControl VerticalAlignment="Bottom" ItemsSource="{x:Bind ViewModel.AssessmentEmployees}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="8" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:Assessment_Employee">
                                <Border
                                    Padding="8,2"
                                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                    CornerRadius="12">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Text="{x:Bind Employee.LastName}" />
                                        <Button
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding ElementName=MyPage, Path=DataContext.RemoveEmployeeCommand}"
                                            CommandParameter="{Binding}"
                                            Content="✕"
                                            FontSize="10" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </Border>

            <!--  Row 3  -->

            <Border
                Grid.Row="0"
                Grid.Column="6"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="تایمر" />
            </Border>
            <Border
                Grid.Row="0"
                Grid.Column="7"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <akTools:NumberBoxEx
                    HorizontalAlignment="Stretch"
                    SmallChange="10"
                    Value="{x:Bind ViewModel.Timer, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="1.5,1.5,0,0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="مولینه" />
            </Border>
            <Border
                Grid.Row="2"
                Grid.Column="3"
                BorderBrush="Black"
                BorderThickness="1.5,1.5,0,0">
                <ComboBox
                    HorizontalAlignment="Stretch"
                    DisplayMemberPath="CurrentMeterName"
                    ItemsSource="{x:Bind ViewModel.AllCurrentMeters}"
                    MaxDropDownHeight="300"
                    PlaceholderText="انتخاب کنید..."
                    SelectedItem="{x:Bind ViewModel.SelectedCurrentMeter, Mode=TwoWay}" />
            </Border>
            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <TextBlock
                    Padding="5"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="گشودگی" />
            </Border>

            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="3"
                BorderBrush="Black"
                BorderThickness="1.5,0,0,0">
                <StackPanel Margin="5">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.GateValues, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:AssessmentGate">
                                <StackPanel>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Text="{x:Bind GateNumber}" />
                                    <akTools:NumberBoxEx
                                        Width="60"
                                        Padding="0,7,0,0"
                                        Maximum="100"
                                        Minimum="0"
                                        NumberFormatter="{StaticResource Df}"
                                        Value="{x:Bind Value, Mode=TwoWay}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            <Border
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="6"
                BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                BorderThickness="1.5,1.5,0,0">
                <TextBlock
                    Padding="5"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="دبی کل" />
            </Border>
            <Border
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="7"
                Background="DarkOrange"
                BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                BorderThickness="1.5,1.5,0,0">
                <TextBlock
                    x:Name="TotalFlowBox"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SamimFD}"
                    FontWeight="SemiBold"
                    Foreground="Black"
                    Text="{x:Bind ViewModel.TotalFlowDisplay, Mode=OneWay}" />
            </Border>
        </Grid>
        <Grid
            Grid.Row="1"
            Width="1054.5"
            Padding="6,4"
            HorizontalAlignment="Stretch"
            BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
            BorderThickness="1,1,1,0"
            CornerRadius="0"
            Visibility="{x:Bind ViewModel.HasPumps, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
                    Margin="4,0,0,6"
                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text="پمپ‌های روشن در زمان اندازه گیری" />
                <ScrollViewer
                    MaxHeight="110"
                    HorizontalAlignment="Stretch"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.PumpStates, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <controls:WrapPanel
                                    HorizontalAlignment="Stretch"
                                    HorizontalSpacing="4"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:AssessmentPump">
                                <CheckBox
                                    MinWidth="140"
                                    Content="{x:Bind LocationPump.PumpName, Mode=OneWay}"
                                    IsChecked="{x:Bind IsRunning, Mode=TwoWay}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="2"
            Width="1054.5"
            MinHeight="48"
            Padding="0"
            HorizontalAlignment="Stretch"
            Background="{ThemeResource SystemControlBackgroundAccentBrush}"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="52" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="ردیف" />
            <Rectangle
                Grid.Column="0"
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Fill="{ThemeResource SystemChromeBlackHighColor}" />
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="فاصله" />
            <Rectangle
                Grid.Column="1"
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Fill="{ThemeResource SystemChromeBlackHighColor}" />
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="عمق" />
            <Rectangle
                Grid.Column="2"
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Fill="{ThemeResource SystemChromeBlackHighColor}" />
            <Grid
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Padding="0"
                    BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                    BorderThickness="0,0,1,1">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource ContentControlThemeFontFamily}"
                        FontSize="14"
                        Foreground="{ThemeResource SystemAltHighColor}"
                        Text="تعداد دور /  ثانیه" />
                </Border>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Border
                        Width="88"
                        BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                        BorderThickness="0,0,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource ContentControlThemeFontFamily}"
                            FontSize="14"
                            Foreground="{ThemeResource SystemAltHighColor}"
                            Text="{x:Bind ViewModel.Timer, Mode=TwoWay}" />
                    </Border>
                    <Border
                        Width="88"
                        BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                        BorderThickness="0,0,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource ContentControlThemeFontFamily}"
                            FontSize="14"
                            Foreground="{ThemeResource SystemAltHighColor}"
                            Text="یک" />
                    </Border>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Column="4"
                Width="Auto"
                HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Padding="0"
                    BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                    BorderThickness="0,0,1,1">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource ContentControlThemeFontFamily}"
                        FontSize="14"
                        Foreground="{ThemeResource SystemAltHighColor}"
                        Text="سرعت متوسط در" />
                </Border>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Border
                        Width="88"
                        BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                        BorderThickness="0,0,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource ContentControlThemeFontFamily}"
                            FontSize="14"
                            Foreground="{ThemeResource SystemAltHighColor}"
                            Text="نقطه" />
                    </Border>
                    <Border
                        Width="88"
                        BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                        BorderThickness="0,0,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource ContentControlThemeFontFamily}"
                            FontSize="14"
                            Foreground="{ThemeResource SystemAltHighColor}"
                            Text="قائم" />
                    </Border>
                    <Border
                        Width="88"
                        BorderBrush="{ThemeResource SystemChromeBlackHighColor}"
                        BorderThickness="0,0,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource ContentControlThemeFontFamily}"
                            FontSize="14"
                            Foreground="{ThemeResource SystemAltHighColor}"
                            Text="مقطع" />
                    </Border>
                </StackPanel>
            </Grid>
            <TextBlock
                Grid.Column="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="عمق مقطع" />
            <Rectangle
                Grid.Column="5"
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Fill="{ThemeResource SystemChromeBlackHighColor}" />
            <TextBlock
                Grid.Column="6"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="عرض مقطع" />
            <Rectangle
                Grid.Column="6"
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Fill="{ThemeResource SystemChromeBlackHighColor}" />
            <TextBlock
                Grid.Column="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="سطح مقطع" />
            <Rectangle
                Grid.Column="7"
                Width="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Fill="{ThemeResource SystemChromeBlackHighColor}" />
            <TextBlock
                Grid.Column="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemAltHighColor}"
                Text="دبی مقطع" />
        </Grid>
        <ScrollViewer
            Grid.Row="3"
            Width="1055"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <StackPanel>
                <ItemsControl ItemsSource="{x:Bind ViewModel.FormValues}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="0" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:FormValueViewModel">
                            <Grid
                                Height="74"
                                Padding="0"
                                HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="52" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="88" />
                                    <ColumnDefinition Width="88" />
                                    <ColumnDefinition Width="88" />
                                    <ColumnDefinition Width="89" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.Clip>
                                    <RectangleGeometry Rect="0, -50, 2000, 200" />
                                </Grid.Clip>
                                <Grid.Resources>
                                    <helpers:DoubleFormatter x:Key="Df2" />
                                </Grid.Resources>

                                <Border
                                    Grid.Column="0"
                                    BorderBrush="Black"
                                    BorderThickness="1,0,0,2">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind RowIndex}" />
                                </Border>

                                <Border
                                    Grid.Column="1"
                                    BorderBrush="Black"
                                    BorderThickness="1,0,0,2">
                                    <akTools:NumberBoxEx
                                        Padding="0,23,0,0"
                                        VerticalAlignment="Stretch"
                                        NumberFormatter="{StaticResource Df2}"
                                        PlaceholderText="0.00"
                                        Value="{x:Bind Distance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Border>

                                <Border
                                    Grid.Column="2"
                                    BorderBrush="Black"
                                    BorderThickness="1,0,0,2">
                                    <akTools:NumberBoxEx
                                        Padding="0,23,0,0"
                                        VerticalAlignment="Stretch"
                                        NumberFormatter="{StaticResource Df2}"
                                        Value="{x:Bind TotalDepth, Mode=TwoWay}" />
                                </Border>

                                <StackPanel Grid.Column="3">
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,1">
                                        <akTools:NumberBoxEx
                                            Padding="0,2,0,0"
                                            NumberFormatter="{StaticResource Df1}"
                                            SpinButtonPlacementMode="Hidden"
                                            Value="{x:Bind Rev02, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullDoubleConv}}" />
                                    </Border>
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,1">
                                        <akTools:NumberBoxEx
                                            Padding="0,2,0,0"
                                            NumberFormatter="{StaticResource Df1}"
                                            SpinButtonPlacementMode="Hidden"
                                            Value="{x:Bind Rev06, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullDoubleConv}}" />
                                    </Border>
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,2">
                                        <akTools:NumberBoxEx
                                            Padding="0,2,0,0"
                                            FontWeight="bold"
                                            NumberFormatter="{StaticResource Df1}"
                                            SpinButtonPlacementMode="Hidden"
                                            Value="{x:Bind Rev08, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullDoubleConv}}" />
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,1">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind N02Display, Mode=OneWay}" />
                                    </Border>
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,1">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind N06Display, Mode=OneWay}" />
                                    </Border>
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,2">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="{x:Bind N08Display, Mode=OneWay}" />
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="5">
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,1">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind Velocity02Display, Mode=OneWay}" />
                                    </Border>
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,1">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind Velocity06Display, Mode=OneWay}" />
                                    </Border>
                                    <Border
                                        Height="24.6"
                                        BorderBrush="Black"
                                        BorderThickness="1,0,0,2">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="{x:Bind Velocity08Display, Mode=OneWay}" />
                                    </Border>
                                </StackPanel>

                                <Border
                                    Grid.Column="6"
                                    BorderBrush="Black"
                                    BorderThickness="1,0,1,2">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind VerticalMeanVelocityDisplay, Mode=OneWay}" />
                                </Border>

                                <Grid
                                    Grid.Column="7"
                                    Width="489"
                                    VerticalAlignment="Top">

                                    <Canvas Visibility="{x:Bind ShowCalculationGrid, Mode=OneWay}">
                                        <Grid
                                            Canvas.Top="-37"
                                            Height="74"
                                            BorderBrush="Black"
                                            BorderThickness="0,0.5,1,0"
                                            Canvas.ZIndex="99">

                                            <!--<Grid.RenderTransform>
                                                <TranslateTransform Y="-37" />
                                            </Grid.RenderTransform>-->

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="86.5" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="101" />
                                            </Grid.ColumnDefinitions>

                                            <Border
                                                Grid.Column="0"
                                                BorderBrush="Black"
                                                BorderThickness="0,0,0,0.5">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{x:Bind PanelAvgVelocityDisplay, Mode=OneWay}" />
                                            </Border>
                                            <Border
                                                Grid.Column="1"
                                                BorderBrush="Black"
                                                BorderThickness="1,0,0,0.5">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{x:Bind PanelAvgDepthDisplay, Mode=OneWay}" />
                                            </Border>
                                            <Border
                                                Grid.Column="2"
                                                BorderBrush="Black"
                                                BorderThickness="1,0,0,0.5">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{x:Bind SectionWidthDisplay, Mode=OneWay}" />
                                            </Border>
                                            <Border
                                                Grid.Column="3"
                                                BorderBrush="Black"
                                                BorderThickness="1,0,0,0.5">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{x:Bind SectionAreaDisplay, Mode=OneWay}" />
                                            </Border>
                                            <Border
                                                Grid.Column="4"
                                                BorderBrush="Black"
                                                BorderThickness="1,0,0,0.5">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontWeight="Bold"
                                                    Foreground="Green"
                                                    Text="{x:Bind SectionFlowDisplay, Mode=OneWay}" />
                                            </Border>
                                        </Grid>
                                    </Canvas>
                                </Grid>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <Grid
            Grid.Row="4"
            Padding="20,8,20,8"
            Background="{ThemeResource SystemChromeAltMediumHighColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Button
                Command="{x:Bind ViewModel.AddRowCommand}"
                Content="افزودن سطر جدید"
                Style="{ThemeResource AccentButtonStyle}" />
            <InfoBar
                x:Name="BoxInfoBar"
                Grid.Column="2"
                Height="48"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                IsClosable="False"
                IsOpen="{x:Bind ViewModel.IsInfoOpen, Mode=TwoWay}"
                Message="{x:Bind ViewModel.InfoMessage, Mode=TwoWay}"
                Severity="{x:Bind ViewModel.InfoSeverity, Mode=TwoWay}" />
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    VerticalAlignment="Center"
                    Command="{x:Bind ViewModel.SubmitFormCommand}"
                    Content="{x:Bind ViewModel.SaveButtonContent, Mode=OneWay}"
                    Style="{ThemeResource AccentButtonStyle}" />

                <Button
                    VerticalAlignment="Center"
                    Command="{x:Bind ViewModel.ResetToNewFormCommand}"
                    Content="فرم جدید (پاک کردن)"
                    Style="{ThemeResource ButtonRevealStyle}" />
            </StackPanel>
            <ProgressRing
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" />
            <StackPanel
                Grid.Column="3"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="دبی کل:" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Green"
                    Text="{x:Bind ViewModel.TotalFlowDisplay, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
