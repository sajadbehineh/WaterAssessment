<ContentDialog
    x:Class="WaterAssessment.Views.CreateAssessmentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:WaterAssessment.Models"
    Title="شروع اندازه گیری جدید"
    CloseButtonText="انصراف"
    FlowDirection="RightToLeft"
    PrimaryButtonCommand="{x:Bind ViewModel.ConfirmCommand}"
    PrimaryButtonText="ایجاد">

    <Grid ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Spacing="10">
            <CalendarDatePicker
                HorizontalAlignment="Stretch"
                Date="{x:Bind ViewModel.Date, Mode=TwoWay}"
                Header="تاریخ" />
            <ComboBox
                HorizontalAlignment="Stretch"
                DisplayMemberPath="LocationName"
                Header="محل (Location)"
                ItemsSource="{x:Bind ViewModel.Locations}"
                SelectedItem="{x:Bind ViewModel.SelectedLocation, Mode=TwoWay}" />
            <ComboBox
                HorizontalAlignment="Stretch"
                DisplayMemberPath="PropellerName"
                Header="پروانه"
                ItemsSource="{x:Bind ViewModel.Propellers}"
                SelectedItem="{x:Bind ViewModel.SelectedPropeller, Mode=TwoWay}" />
            <ComboBox
                HorizontalAlignment="Stretch"
                DisplayMemberPath="CurrentMeterName"
                Header="مولینه"
                ItemsSource="{x:Bind ViewModel.CurrentMeters}"
                SelectedItem="{x:Bind ViewModel.SelectedCurrentMeter, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="10">
            <NumberBox
                Header="تایمر (ثانیه)"
                SpinButtonPlacementMode="Inline"
                Value="{x:Bind ViewModel.Timer, Mode=TwoWay}" />
            <StackPanel Orientation="Horizontal" Spacing="5">
                <NumberBox
                    Width="100"
                    Header="اشل"
                    Value="{x:Bind ViewModel.Echelon, Mode=TwoWay}" />
                <ToggleSwitch
                    IsOn="{x:Bind ViewModel.IsCanal, Mode=TwoWay}"
                    OffContent="زهکش"
                    OnContent="کانال" />
            </StackPanel>

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="تیم اندازه گیری (Max 3)" />
            <StackPanel Orientation="Horizontal" Spacing="5">
                <ComboBox
                    Width="150"
                    DisplayMemberPath="LastName"
                    ItemsSource="{x:Bind ViewModel.AllEmployees}"
                    SelectedItem="{x:Bind ViewModel.SelectedEmployeeToAdd, Mode=TwoWay}" />
                <Button Command="{x:Bind ViewModel.AddToTeamCommand}" Content="+" />
            </StackPanel>

            <ListView
                Height="100"
                BorderBrush="Gray"
                BorderThickness="1"
                ItemsSource="{x:Bind ViewModel.SelectedTeam}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Employee">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{x:Bind LastName}" />
                            <Button
                                Command="{Binding ElementName=MyDialog, Path=DataContext.RemoveFromTeamCommand}"
                                CommandParameter="{x:Bind}"
                                Content="x"
                                FontSize="10" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</ContentDialog>